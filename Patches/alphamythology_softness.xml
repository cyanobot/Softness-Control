<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Alpha Mythology</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="MM_LightMagicalLeather"]/statBases</xpath>
				<value>
					<Textile_Softness>0.35</Textile_Softness>
				</value>
			</li>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="MM_HeavyMagicalLeather"]/statBases</xpath>
				<value>
					<Textile_Softness>0.29</Textile_Softness>
				</value>
			</li>
				
		</operations>
	</match>
</Operation>

</Patch>