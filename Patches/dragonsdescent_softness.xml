<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Dragons Descent</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Dragon_Leather"]/statBases</xpath>
				<value>
					<Textile_Softness>0.18</Textile_Softness>
				</value>
			</li>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Rare_Dragon_Leather"]/statBases</xpath>
				<value>
					<Textile_Softness>0.18</Textile_Softness>
				</value>
			</li>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="True_Dragon_Leather"]/statBases</xpath>
				<value>
					<Textile_Softness>0.18</Textile_Softness>
				</value>
			</li>
				
		</operations>
	</match>
</Operation>

</Patch>