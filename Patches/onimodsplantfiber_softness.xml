<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Onimods - Plant Fiber</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Onimods_PlantFiber"]/statBases</xpath>
				<value>
					<Textile_Softness>0.15</Textile_Softness>
				</value>
			</li>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Onimods_Burlap"]/statBases</xpath>
				<value>
					<Textile_Softness>0.22</Textile_Softness>
				</value>
			</li>
				
		</operations>
	</match>
</Operation>

</Patch>